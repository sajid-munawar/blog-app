<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= post.text %>
  </p>

  <p>
    <strong>Comments counter:</strong>
    <%= post.comments_counter %>
  </p>

  <p>
    <strong>Likes counter:</strong>
    <%= post.likes_counter %>
  </p>

  <p>
    <strong>Created at:</strong>
    <%= post.created_at %>
  </p>

  <p>
    <strong>Updated at:</strong>
    <%= post.updated_at %>
  </p>

</div>
